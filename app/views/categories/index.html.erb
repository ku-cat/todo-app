<h1>カテゴリー一覧</h1>
<table>
  <thead>
    <tr>
      <th>カテゴリー名</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title  %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
         <td><%= link_to '削除', category_path(category), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_category_path %>